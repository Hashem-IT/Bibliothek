    form(method='POST' action='/Suchen')
        div.form-group
        input#name.form-control(class="w-25 p-3 "  type='text', placeholder='ISBN || AUTHOR' name='name')
        
        button.btn.btn-primary(class="w-25 p-3 " type='submit') such
